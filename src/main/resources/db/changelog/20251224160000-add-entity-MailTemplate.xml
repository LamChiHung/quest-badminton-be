<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd"
>
    <changeSet id="20251224160000-01" author="hunglc">
        <createTable tableName="m_mail_templates">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="20251224160000-02" author="hunglc">
        <sqlFile path="db/sql/20251228210000-add-register-mail-template.sql"/>
    </changeSet>
    <changeSet id="20251224160000-03" author="hunglc">
        <addUniqueConstraint tableName="m_mail_templates" columnNames="key"/>
    </changeSet>

</databaseChangeLog>