<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd"
>
    <changeSet id="20251230213000-01" author="hunglc">
        <createTable tableName="t_player_pairs">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fk_player_id_1" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="fk_player_id_2" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="fk_tour_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="fk_team_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="20251230212000-02" author="hunglc">
        <addForeignKeyConstraint baseTableName="t_player_pairs"
                                 baseColumnNames="fk_player_id_1"
                                 constraintName="fk_t_players_1_id"
                                 referencedTableName="t_players"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="t_player_pairs"
                                 baseColumnNames="fk_player_id_2"
                                 constraintName="fk_t_players_2_id"
                                 referencedTableName="t_players"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="t_player_pairs"
                                 baseColumnNames="fk_tour_id"
                                 constraintName="fk_t_tours_id"
                                 referencedTableName="t_tours"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="t_player_pairs"
                                 baseColumnNames="fk_team_id"
                                 constraintName="fk_t_teams_id"
                                 referencedTableName="t_teams"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="20251230212000-03" author="hunglc">
        <createIndex tableName="t_player_pairs" indexName="idx_t_player_pairs_fk_player_id_1">
            <column name="fk_player_id_1" type="bigint"/>
        </createIndex>
        <createIndex tableName="t_player_pairs" indexName="idx_t_player_pairs_fk_player_id_2">
            <column name="fk_player_id_2" type="bigint"/>
        </createIndex>
        <createIndex tableName="t_player_pairs" indexName="idx_t_player_pairs_fk_tour_id">
            <column name="fk_tour_id" type="bigint"/>
        </createIndex>
        <createIndex tableName="t_player_pairs" indexName="idx_t_player_pairs_fk_team_id">
            <column name="fk_team_id" type="bigint"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>