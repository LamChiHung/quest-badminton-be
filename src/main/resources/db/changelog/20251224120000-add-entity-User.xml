<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd"
>
    <changeSet id="20251224120000-01" author="hunglc">
        <createTable tableName="t_users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="club" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="20251224120000-02" author="hunglc">
        <addColumn tableName="t_users">
            <column name="is_enabled" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="20251224120000-03" author="hunglc">
        <addColumn tableName="t_users">
            <column name="register_token" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>